<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/layout_news_title"
        android:background="@color/default_circle_indicator_fill_color"

        >


        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/share0"
            android:drawablePadding="@dimen/one_iv_padding"
            android:gravity="center"
            android:padding="@dimen/one_iv_padding"
            android:paddingRight="@dimen/one_iv_padding"
            android:text="分 享"
            android:textSize="@dimen/textsize_folowing"/>


        <TextView
            android:id="@+id/tv_favor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_share"
            android:drawableLeft="@drawable/favor"
            android:drawablePadding="@dimen/one_iv_padding"
            android:gravity="center"
            android:padding="@dimen/one_iv_padding"
            android:paddingRight="@dimen/one_iv_padding"
            android:text="收 藏"
            android:textSize="@dimen/textsize_folowing"/>


        <TextView
            android:id="@+id/tv_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_favor"
            android:drawableLeft="@drawable/download"
            android:drawablePadding="@dimen/one_iv_padding"
            android:gravity="center"
            android:padding="@dimen/one_iv_padding"
            android:paddingRight="@dimen/one_iv_padding"
            android:text="下 载"
            android:textSize="@dimen/textsize_folowing"/>


        <TextView
            android:id="@+id/tv_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_download"
            android:drawableLeft="@drawable/report"
            android:drawablePadding="@dimen/one_iv_padding"
            android:gravity="center"
            android:padding="@dimen/one_iv_padding"
            android:paddingRight="@dimen/one_iv_padding"
            android:text="我 要 举 报"
            android:textSize="@dimen/textsize_folowing"/>
    </RelativeLayout>
</RelativeLayout>
